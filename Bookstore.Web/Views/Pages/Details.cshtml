@model Book

<div class="row">
    <div class="col-4">
        <div class="mb-5">
            <img src="https://placehold.co/1000x1430" alt="@Model.Title" class="img-fluid">
        </div>
    </div>
    <div class="col-6">
        <h1>@Model.Title</h1>
        <p class="text-secondary">@string.Join(", ", Model.Authors.Select(a => a.FullName))</p>

        <div class="mb-5">
            <p class="fs-3">@Model.Price.ToString("C")</p>
            <a class="btn btn-success" asp-controller="Purchases" asp-action="Create" asp-route-id="@Model.Id">Comprar</a>
        </div>

        <p class="lead">@Model.Description</p>
    </div>
</div>

