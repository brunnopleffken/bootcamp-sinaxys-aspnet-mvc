@model NewPublisherRequest

<h1>Adicionar nova categoria</h1>

<form method="post" asp-action="Create" class="row gy-3">
    <div class="col-12">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="City" class="form-label"></label>
        <input type="text" asp-for="City" class="form-control">
        <span asp-validation-for="City" class="form-text text-danger"></span>
    </div>
    <div class="col-6">
        <label asp-for="Country" class="form-label"></label>
        <input type="text" asp-for="Country" class="form-control">
        <span asp-validation-for="Country" class="form-text text-danger"></span>
    </div>
    <div class="col-12">
        <input type="submit" value="Cadastrar" class="btn btn-primary">
    </div>
</form>
